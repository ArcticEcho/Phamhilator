<controls:MetroWindow  x:Class="Phamhilator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"

        Title="Phamhilator" Height="700" Width="1200" WindowStartupLocation="CenterScreen" Closing="MetroWindow_Closing" ResizeMode="NoResize" SaveWindowPosition="True">
    <Border BorderBrush="#FF41B1FF" BorderThickness="1">
        <Canvas>
            <WebBrowser Name="realtimeWb" Height="630" Width="550" Source="http://stackexchange.com/questions?tab=realtime"/>
            <WebBrowser Name="chatWb" Height="630" Canvas.Left="550" Width="642" Source="http://meta.stackexchange.com/users/login"/>
            <Button Content="Jump to LQP" Canvas.Left="1097" Canvas.Top="638" Width="85" Click="Button_Click"/>
            <Button Content="Jump to MSE Tavern" Canvas.Left="970" Canvas.Top="638" Width="122" Click="Button_Click_1"/>
            <Button Content="Start Monitoring" Canvas.Left="10" Canvas.Top="638" Width="109" Click="Button_Click_2"/>
            <CheckBox Content="Catch Spam" Canvas.Left="799" Canvas.Top="641" IsChecked="True" Checked="catchSpamCb_Checked" Unchecked="catchSpamCb_Unchecked"/>
            <CheckBox Content="Catch LQ" Canvas.Left="722" Canvas.Top="641" IsChecked="True" Checked="catchLQCb_Checked" Unchecked="catchLQCb_Unchecked"/>
            <CheckBox Content="Catch Off" Canvas.Left="891" Canvas.Top="641" IsChecked="True" Checked="catchOffCb_Checked" Unchecked="catchOffCb_Unchecked"/>
            <CheckBox Content="Catch Bad Tag" Canvas.Left="617" Canvas.Top="641" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
            <Slider Name="refreshRateS" Canvas.Left="203" Canvas.Top="641" Width="250" Maximum="30000" Minimum="2000" SmallChange="1000" LargeChange="5000" Value="22000" ValueChanged="Slider_ValueChanged"/>
            <Label Content="Refresh Rate:" Canvas.Left="124" Canvas.Top="637"/>
            <Label Name="refreshRateL" Content="10000 milliseconds" Canvas.Left="458" Canvas.Top="637"/>

        </Canvas>
    </Border>
</controls:MetroWindow>
